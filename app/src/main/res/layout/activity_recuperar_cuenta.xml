<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".recuperarCuenta">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <!---Titulo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="10dp"
            android:padding="20dp">

            <TextView
                android:id="@+id/textView"
                android:layout_width="360dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="Recuperar Contraseña"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />

        </LinearLayout>

        <!---Seccion de campos -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/borde"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/etRCPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:drawableStart="@drawable/baseline_remove_red_eye_24"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/icontra"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/borde"
            android:orientation="horizontal"
            android:padding="12dp">


            <EditText
                android:id="@+id/etRCConfirmarPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="Confirmar Contraseña"
                android:textSize="20sp" />
        </LinearLayout>


        <!---Otra seccion -->


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnRecuperarCuenta"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:backgroundTint="#3D69BF"
                android:elevation="200dp"
                android:onClick="irAInicio"
                android:text="Confirmar"
                android:textColor="@color/Blanco"
                android:translationZ="200dp"
                app:cornerRadius="100dp" />
        </LinearLayout>

    </LinearLayout>

</RelativeLayout>