<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fondo1"
    android:orientation="vertical"
    tools:context=".Inicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="168dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:padding="20dp">


            <TextView
                android:id="@+id/textView"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="44dp"
                android:fontFamily="sans-serif-medium"
                android:gravity="center_horizontal"
                android:text="@string/IniSec"
                android:textColor="@color/black"
                android:textSize="30dp"
                android:textStyle="bold"
                tools:ignore="RtlCompat" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="60dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/borde"
            android:orientation="horizontal"
            android:padding="12dp">

            <EditText
                android:id="@+id/etIUsuario"
                android:layout_width="wrap_content"
                android:drawableStart="@drawable/baseline_account_circle_24"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:ems="10"
                android:inputType="textPersonName"
                android:hint="@string/Usuario"
                android:textSize="20sp" />
        </LinearLayout>



        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/borde"
            android:orientation="horizontal"
            android:padding="12dp">



            <EditText
                android:id="@+id/etIPassword"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                android:drawableStart="@drawable/baseline_remove_red_eye_24"
                android:hint="@string/icontra"
                android:textSize="20sp"
                android:background="@android:color/transparent"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal">



            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="@string/AunNo"
                android:layout_marginTop="20dp"
                android:textAlignment="textEnd" />

            <TextView
                android:id="@+id/rediRegistrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:onClick="cambiarRegistro"
                android:text="@string/Registrate"
                android:textColor="#3D69BF"
                android:textStyle="bold|italic" />
        </LinearLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <Button
                android:id="@+id/btnIniSeGoogle"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#808080"
                android:elevation="200dp"
                android:onClick="irAInicio"
                android:text="@string/IniGoogle"
                android:textColor="#FDFCFC"
                android:translationZ="200dp"
                app:cornerRadius="100dp" />

            <Button
                android:id="@+id/btnIniciarSesion"
                android:layout_width="200dp"
                android:layout_height="65dp"
                android:layout_marginTop="20dp"
                android:backgroundTint="#3D69BF"
                android:elevation="200dp"
                android:onClick="cambiarRegistro"
                android:text="@string/IniSec"
                android:textColor="@color/Blanco"
                android:translationZ="200dp"
                app:cornerRadius="100dp" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>